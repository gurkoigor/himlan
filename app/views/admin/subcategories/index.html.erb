<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to "Добавить", new_admin_subcategory_path%></li>
    </ul>
    <div class="clear"></div>
  </div>
  <div class="content">
    <h2 class="title">Подкатегории</h2>
    <div class="inner">
      <table class="table">
        <th class="first">Подкатегория</th>
        <th>Имя Подкатегории</th>
        <th>Категория</th>
        <th>Действия</th>
        <% unless @subcategories.nil? %>
          <%= render :partial => 'subcategory', :collection => @subcategories %>
        <% end %>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>

        <%= will_paginate @subcategories  %>

        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>