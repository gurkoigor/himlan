<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to "Список", admin_users_path %></li>
      <li class="active"><%= link_to "Редактировать", new_admin_user_path(@user.id) %></li>
    </ul>
    <div class="clear"></div>
  </div>
  <div class="content">
    <h2 class="title">Создание пользователя</h2>
    <div class="inner">
      <% form_for @user, :url => admin_users_path, :html => {:class => :form } do |form| %>
        <%= form.error_messages %>
        <%= render :partial => "form", :object => form %>
      <% end %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>

