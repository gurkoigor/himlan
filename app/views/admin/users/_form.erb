  <span class="description">Ex: a simple text</span>
</div>

<div class="group">
  <%= form.label :password_confirmation, "Повторить пароль", :class => :label %>
  <%= form.password_field :password_confirmation, :class => 'password_field' %>
  <span class="description">Ex: a simple text</span>
</div>