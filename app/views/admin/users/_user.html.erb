<tr>
  <td><%= user.login %></td>
  <td><%= user.nickname %></td>
  <td><%= user.email %></td>
  <td><%= user.current_login_ip %></td>
  <td><%= user.last_login_ip %></td>
  <td><%= l(user.last_request_at, :format => :long) if user.last_request_at %></td>
  <td><%= check_box_tag "user", "is_admin", user.is_admin, :disabled => true  %></td>
  <td class="last">
    <%= link_to image_tag('icons/user_edit.png', :title => "Редактировать"), edit_admin_user_path(user.id) %> |
    <%= link_to image_tag('icons/user_delete.png', :title => "Удалить"),  admin_user_path(user.id), :method => :delete, :confirm => "Вы уверены в удалении #{ user.login}" %>
  </td>
</tr>