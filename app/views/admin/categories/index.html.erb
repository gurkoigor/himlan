<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to "Добавить", new_admin_category_path%></li>
    </ul>
    <div class="clear"></div>
  </div>
  <div class="content">
    <h2 class="title">Категории</h2>
    <div class="inner">
      <table class="table">
        <th class="first">Категория</th>
        <th>Имя Категории</th>
        <th>Действия</th>
        <% unless @categories.nil? %>
          <%= render :partial => 'category', :collection => @categories%>
        <% end %>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>

        <%= will_paginate @categories  %>

        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>