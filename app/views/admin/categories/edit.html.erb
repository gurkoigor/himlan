<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'Список', admin_categories_path  %></li>
      <li class="active"><%= link_to 'Редактирование', edit_admin_category_path(@category.id) %></li>
    </ul>
    <div class="clear"></div>
  </div>
  <div class="content">
    <h2 class="title">Редактирование категории</h2>
    <div class="inner">
      <% form_for [:admin, @category], :method => :put, :html => { :multipart => true, :class => :form }  do |form| %>
        <%= error_messages_for :category %>
        <%= render :partial => "form", :locals => {:form => form} %>
        <div class="group navform">
          <%= form.submit "Обновить", :class => "button" %> or <%= link_to "Назад", admin_categories_path %>
        </div>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>