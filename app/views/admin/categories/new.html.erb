<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="active"><%= link_to 'Список', admin_categories_path  %></li>
    </ul>
    <div class="clear"></div>
  </div>
  <div class="content">
    <h2 class="title">Редактирование категории</h2>
    <div class="inner">
      <% form_for [:admin, @category], :html => { :multipart => true, :class => :form }  do |form| %>
        <%= error_messages_for :category %>
        <%= render :partial => "form", :locals => {:form => form} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>